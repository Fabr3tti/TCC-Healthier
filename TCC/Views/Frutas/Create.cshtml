@model TCC.Models.Fruta

@{
    ViewData["Title"] = "Criar";
    Layout = "~/Views/Shared/_LayoutDef.cshtml";
}

<h4>Fruta</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício1" class="control-label"></label>
                <textarea asp-for="Benefício1" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício2" class="control-label"></label>
                <textarea asp-for="Benefício2" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício3" class="control-label"></label>
                <textarea asp-for="Benefício3" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício4" class="control-label"></label>
                <textarea asp-for="Benefício4" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício5" class="control-label"></label>
                <textarea asp-for="Benefício5" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício5" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Benefício6" class="control-label"></label>
                <textarea asp-for="Benefício6" class="form-control" rows="4" /></textarea>
                <span asp-validation-for="Benefício6" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto" class="control-label"></label>
                <input type="file" asp-for="Foto" class="form-control" accept=".png,.jpg,.jpeg,.gif"/>
                <span asp-validation-for="Foto" class="text-danger"></span>
                <img src="" class="img-fluid" id='PreviewFoto'/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script type="text/javascript">
    window.addEventListener('load', function () {
        document.querySelector('input[type="file"]').addEventListener('change', function () {
            if (this.files && this.files[0]) {
                var img = document.getElementById('PreviewFoto');
                img.src = URL.createObjectURL(this.files[0]);
            }
        });
    });
</script>
