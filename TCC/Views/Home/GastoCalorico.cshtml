    <div class="row mb-5">
        <div class="col-12 col-sm-12" id="titulo-calc">
            <img src="~/img/Titulo2.png">
        </div>
    </div>
</div>

    <div class="row">
        <div class="col-12 col-sm-12">
            <br><br>
